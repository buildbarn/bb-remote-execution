    name = "com_github_winfsp_winfsp_tests",
    build_file_content = """
filegroup(
    name = "winfsp_tests_x64",
    srcs = ["winfsp-tests-x64.exe"],
    visibility = ["//visibility:public"],
)
""",
    integrity = "sha256-DPxoeRcDyA+Wxynr04tjGH3lPhm6ocYDpwWdbqh8X1I=",
